<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#BD7C7C"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/cat1"
        android:layout_width="173dp"
        android:layout_height="160dp"
        android:layout_marginStart="244dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/cat2" />

    <ImageView
        android:id="@+id/cat2"
        android:layout_width="170dp"
        android:layout_height="100dp"
        android:layout_marginStart="225dp"
        app:layout_constraintBaseline_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/cat1" />

    <ImageView
        android:id="@+id/cat3"
        android:layout_width="248dp"
        android:layout_height="215dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/cat3" />

    <ImageView
        android:id="@+id/cat4"
        android:layout_width="277dp"
        android:layout_height="331dp"
        android:layout_marginTop="148dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/cat4" />

    <TextView
        android:id="@+id/text1"
        android:layout_width="166dp"
        android:layout_height="87dp"
        android:layout_marginTop="100dp"
        android:background="#000000"
        android:text="Наташ, ты спишь?"
        android:textColor="#FFFFFF"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.934"
        app:layout_constraintStart_toStartOf="parent"

        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text2"
        android:layout_width="207dp"
        android:layout_height="85dp"
        android:layout_marginTop="148dp"
        android:background="#000000"
        android:text="Уже 6 часов утра, Наташ"
        android:textColor="#FFFFFF"
        android:textSize="34sp"
        app:layout_constraintEnd_toStartOf="@+id/cat2"
        app:layout_constraintHorizontal_bias="0.745"
        app:layout_constraintStart_toEndOf="@+id/cat1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="38dp" />

    <TextView
        android:id="@+id/text3"
        android:layout_width="252dp"
        android:layout_height="122dp"
        android:layout_marginStart="136dp"
        android:layout_marginTop="256dp"
        android:background="#000000"
        android:text="Вставай, мы там всё уронили"
        android:textColor="#FFFFFF"
        android:textSize="34sp"
        app:layout_constraintStart_toStartOf="@+id/guideline2"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text4"
        android:layout_width="265dp"
        android:layout_height="132dp"
        android:layout_marginEnd="28dp"
        android:layout_marginBottom="200dp"
        android:background="#000000"
        android:text="Мы уронили вообще всё, Наташ, честно"
        android:textColor="#FFFFFF"
        android:textSize="34sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>